<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
          <td><%= link_to bookmark.address, bookmark.address %></td>
          <td> <%= render post.tags %></td>
          <td><%= link_to 'Show', bookmark %></td>
          <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
          <td><%= link_to 'Delete', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Tag', add_tag %></td>
        </ul>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

